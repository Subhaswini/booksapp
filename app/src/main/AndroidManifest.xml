<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ersen.Bookaholics" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.ersen.Bookaholics.application.FaxiApplication"
        android:icon="@mipmap/booksicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.ersen.Bookaholics.activities.MainActivity" android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
